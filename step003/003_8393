// 반복 횟수를 입력 받아 반복문 수행

import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
 
        int number = sc.nextInt();
        int sum = 0;
        
        for(int i=1; i<=number; i++){
            sum += i;
        }
        
        System.out.println(sum);
    }
}
